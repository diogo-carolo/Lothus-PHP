.menu-lateral
	color: #fff
	@extend .col-md-2
	height 900px
	padding 0
	background-color #2A3F54
	.segura-logo
		border-bottom 1px solid #fff
		padding-bottom 35px
		.logo
			padding 20px 0
			&__img
				margin-left 30px
				@extend .col-md-3
				img
					@extend .img-responsive
			&__texto
				font-size 20px
				@extend .col-md-7
				
.segura-user
	border-bottom 1px solid #fff
	padding-bottom 35px
	.user
		margin 20px 0
		&__img
			border-radius 60px
			background-color: #000
			margin-left 26px
			@extend .col-md-4		
			img
				@extend .img-responsive
		&__nome
			margin-top 20px
			@extend .col-md-6
			font-size 20px

.lista
	margin-top 20px
	list-style: none
	font-size: 20px
	padding: 0
	li
		padding: 10px 0
		display table
		margin 0 auto
		a
			color: #fff
			text-decoration: none
			text-align: center
.sublista
	margin: 10px 0
	padding 0
	li
		padding: 5px 0
		list-style none
		a
			color: #fff
.dropdown-menu
	position: relative
	float none
	min-width 0
	background-color: transparent
	border none
	box-shadow: none

		


.conteudo
	@extend .col-md-10
	height 900px
	background-color #0b0b0b
	